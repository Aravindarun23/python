def bonus(year):
    """ find a bonus salary"""
    if year >= 5:
       print("\nYour bonus is =",.05*salary)
    else:
       print("\nSorry, You have just",year,"years of experience","\nSo No bonus for you")
       print("You need to work another",5-year,"years to get Bonus")


